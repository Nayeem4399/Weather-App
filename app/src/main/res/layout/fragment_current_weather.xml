<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sky1"
        android:orientation="vertical"
        tools:context=".CurrentWeatherFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="50dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/weather3"

                />



                <TextView
                    android:id="@+id/currentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#192569"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="Try again" />




            <TextView
                android:id="@+id/dayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#444242"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Try again" />


            <TextView
                android:id="@+id/sunriseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#F01607"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Try again" />

            <TextView
                android:id="@+id/sunsetTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#2B0A02"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Try again" />

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0527F3"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Please wait..." />


            <TextView
                android:id="@+id/currentDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#3C3F3F"
                android:layout_gravity="center"
                android:text="Please wait"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </LinearLayout>


    </LinearLayout>
</layout>